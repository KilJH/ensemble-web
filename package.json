{
  "name": "hapzoo",
  "version": "0.1.0",
  "private": true,
  "description": "HAPZOO - Ensemble Playground for Music Communities",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @hapzoo/web dev",
    "dev:api": "pnpm --filter @hapzoo/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @hapzoo/web build",
    "build:api": "pnpm --filter @hapzoo/api build",
    "lint": "turbo run lint",
    "lint:web": "pnpm --filter @hapzoo/web lint",
    "lint:api": "pnpm --filter @hapzoo/api lint",
    "typecheck": "turbo run typecheck",
    "typecheck:web": "pnpm --filter @hapzoo/web typecheck",
    "typecheck:api": "pnpm --filter @hapzoo/api typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
